<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:background="@drawable/bglogin"
        android:layout_height="match_parent">

    <EditText android:layout_width="300dp"
              android:layout_height="50dp"
              android:background="@drawable/form"
              android:layout_alignParentEnd="true" android:layout_marginEnd="53dp" android:layout_marginTop="313dp"
              android:layout_alignParentTop="true"
              android:inputType="text"
              android:hint="Username"
              android:id="@+id/et_username"
              android:paddingStart="20dp"
    />
    <EditText android:layout_width="300dp"
              android:layout_height="50dp"
              android:background="@drawable/form"
              android:layout_alignParentEnd="true"
              android:layout_marginEnd="53dp"
              android:layout_marginTop="380dp"
              android:layout_alignParentTop="true"
              android:inputType="textPassword"
              android:hint="Password"
              android:id="@+id/et_password"
              android:paddingStart="20dp"
    />
    <Button android:id="@+id/btn_signin"
            android:layout_width="139dp"
            android:layout_height="50dp"
            android:layout_marginTop="457dp"
            android:layout_alignParentTop="true"
            android:background="@drawable/button2"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="56dp"
            android:text="SIGN IN"
            android:textColor="#7f0000"
    />
    <Button android:id="@+id/btn_signinGoogle"
            android:layout_width="139dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="459dp"
            android:layout_alignParentTop="true"
            android:background="@drawable/button3"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="211dp"
            android:text="GOOGLE"
            android:textColor="#ffffff"
    />

    <Button android:layout_width="200dp"
            android:id="@+id/btn_register"
            android:layout_height="50dp"
            android:layout_marginTop="524dp"
            android:layout_alignParentTop="true"
            android:background="@drawable/button"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="102dp"
            android:text="REGISTER"
            android:textColor="#ffffff"
    />
    <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
              android:text="Forgot password"
              android:layout_below="@+id/btn_signin"
              android:layout_marginTop="82dp" android:layout_alignParentStart="true"
              android:layout_marginStart="157dp"
              android:textColor="#ffffff"
    />
</RelativeLayout>